<body>
    <div id="root"></div>
    <div class="container">
        <div class="login-form col-md-3" id="login-form">
            <form action="/auth/signup" class="col-md-12" method="post">
                <div class="form-group">
                        <h2 style="color:rgb(40, 22, 196)">Login</h2>
                    <label for="">Username :</label>
                    <input autofocus class="form-control" type="text" name="username">
                </div>
                <div class="form-group">
                    <label for="">Password : </label>
                    <input class="form-control" type="password" name="password">
                </div>
                <input type="submit" value="Create" class="btn secondary white">
                <a href="/login" class="btn btn-link">Login</a>
                <br>
            </form>
        </div>
    </div>

<style>
    body{
        background: url("http://eomcreative.com/hsm2/wp-content/uploads/2014/01/slider4.jpg") no-repeat center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
    }
    .login-form{
        background: rgb(235, 219, 229);
        text-align: center;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        opacity: .92;
        float: left;
    }
